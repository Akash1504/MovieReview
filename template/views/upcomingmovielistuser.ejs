    <style>
        body {
  margin: 0;
  font-family: Arial, Helvetica, sans-serif;
}

.topnav {
  overflow: hidden;
  background-color: rgba(163, 61, 61, 0.877);
}

.topnav a {
  float:left;
  color: #c0bdbdec;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 17px;
}

.topnav a:hover {
  background-color: #ddd;
  color: rgb(204, 82, 82);
}

.topnav a.active {
  background-color: #4CAF50;
  color: white;
}
    </style>
</head>
<body>
    <div class="topnav" >
		<a class="active" href="/"><i class="fa fa-fw fa-home"></i>Home</a>

		 <a class="nav-link" href="/register"><i class='fa fa-fw fa-user-plus'></i>Register</a>
	 
		 <a class="nav-link" href="/login"><i class="fa fa-fw fa-user"></i>Login</a>
		  <a class="nav-link" href="/logout"><i class="fa fa-fw fa-user"></i>Logout</a>
	
	  </li>
</div>
    <div>
        <% items.forEach(function(data) { %>
           <div >
            
            <div style="position:absolute;width: 40%;height:450px;left: 810px; margin-top:0px;background-color:rgb(236, 236, 57);">
      
                  <h5 style="position: absolute;left: 200px;top: 20%;font-size: xx-large;font-family:cursive;"><%= data.name %></h5>
                  <p style="position: absolute;left: 180px;top: 40%;font-size: xx-large;font-family: Georgia, 'Times New Roman', Times, serif;">Date:<%= data.date %></p>
            </div>       
            <div style="border-style: solid;border-width: 5px;border-color: rgb(15, 15, 15);border-top: none;border-left: none;border-right: none;" >
                  <% if(data.image){ %>
                <img src="./uploads/<%=data.image%>" style="height:450px;width: 810px;">   
               <% } %>
            </div>
                  
                  </div><% }) %>
      </div>        
  
